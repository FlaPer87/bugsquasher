"redhat": {
    "vm": "rhel64",
    "prefix": "rh-",
    "hypervisor": "vagrant",
    "work_dir": "~/workspace",

    "bz_user": "BZ_USERNAME",
    "bz_password": "BZ_PASSWORD",
    "bz_url": "https://bugzilla.redhat.com/xmlrpc.cgi",

    "bz_query": {
        "product": "blah, blah, blah",
        "assigned_to": "me@whatever.com"
    },

    "pyvenv_args": [
        "--no-site-packages",
        "--python=python2.7",
        ".venv"
    ],

    "take_hooks": [
        "egg:bugsquasher#vagrant",
        "egg:bugsquasher#bugzilla",
        "egg:bugsquasher#pyvenv"
    ],
    "destroy_hooks": [
        "egg:bugsquasher#vagrant"
    ],
    "show_hooks": [
        "egg:bugsquasher#vagrant",
        "egg:bugsquasher#bugzilla"
    ],
    "list_hooks": [
        "egg:bugsquasher#vagrant",
        "egg:bugsquasher#bugzilla"
    ],
    "update_hooks": [
        "egg:bugsquasher#bugzilla"
    ]
}
